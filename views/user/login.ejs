<% layout("Layouts/boilerplate.ejs") -%>


<div class="row d-flex justify-content-center">
    <div class="col-lg-8">

        <h1 class="text-center">Log in</h1>

        <form action="/user/login" class="mt-4 needs-validation" novalidate method="post">

            <div class="input-group mb-3">
                <span class="input-group-text">@</span>
                <input required type="text" class="form-control"  id="username" name="username" placeholder="Username">
                <div class="invalid-feedback">
                    Please enter the correct username
                </div>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">Password</span>
                <input required type="password" name="password" id="password" class="form-control" placeholder="Enter password">
                <div class="invalid-feedback">
                    Please enter the correct password
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-danger ">Log in</button>
                <a href="/user/signup"><button type="button" class="btn btn-outline-primary">Sign up as a new user</button></a>
            </div>

        </form>
    </div>
</div>