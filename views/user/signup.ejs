<% layout("Layouts/boilerplate.ejs") -%>


<div class="row d-flex justify-content-center">
    <div class="col col-lg-8">

        <h1 class="text-center">Sign Up</h1>

        <form action="/user/signup" method="post" class="mt-4">
            <div class="input-group mb-3">
                <span class="input-group-text">@</span>
                <input type="text" class="form-control"  id="username" name="username" placeholder="Username">
            </div>

            
            <div class="input-group mb-3">
                <span class="input-group-text">Password</span>
                <input type="password" name="password" id="password" class="form-control" placeholder="Enter password">
            </div>

            <div class="input-group mb-3">
                <input type="text" name="emailid"  id="emailid" class="form-control" placeholder="Email Address">
                <span class="input-group-text">@example.com</span>
            </div>

            
            <div class="input-group mb-3">
                <span class="input-group-text">+91</span>
                <input type="tel" name="phone" id="phone"  class="form-control" placeholder="Phone no: " maxlength="10">
            </div>


            <div class="input-group mb-3">
                <span class="input-group-text">Address</span>
                <input type="text" name="address" id="address"  class="form-control" placeholder="Enter your address">
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-danger btn-lg">Submit</button>
            </div>
        </form>
    </div>
</div>
